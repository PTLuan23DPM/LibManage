@model User

<h2>Thêm tài khoản</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Username">Tên đăng nhập:</label>
        <input asp-for="Username" class="form-control" required />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordHash">Mật khẩu:</label>
        <input asp-for="PasswordHash" type="password" class="form-control" required />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <div class="form-group">
            <label asp-for="Role">Vai trò:</label>
        <select asp-for="Role" class="form-control">
            <option value="Admin">Admin</option>
            <option value="Thuthu">Thủ thư</option>
            <option value="Nguoidung">Người dùng</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    }
    else
    {
        <input asp-for="Role" type="hidden" value="Nguoidung" />
    }
    <button type="submit" class="btn btn-success">Lưu</button>
</form>
